#!/bin/bash -evx
set -o pipefail

BIN=$(dirname $0)/bin

### テストは京急で（京急さえ出力できれば他は大した問題ではない） ###
$BIN/eki | grep '京急本線 京急川崎' 2> /dev/null
$BIN/eki-pref | grep '神奈川県 京急本線' 2> /dev/null
$BIN/eki pref | grep '神奈川県 京急本線' 2> /dev/null
[ "$($BIN/eki-adj 京急川崎 | LANG=C sort | xargs)" = "八丁畷 六郷土手 港町" ]
[ "$($BIN/eki adj 京急川崎 | LANG=C sort | xargs)" = "八丁畷 六郷土手 港町" ]
[ "$($BIN/eki-line 京急川崎 | LANG=C sort | xargs)" = "京急大師線 京急本線" ]
[ "$($BIN/eki line 京急川崎 | LANG=C sort | xargs)" = "京急大師線 京急本線" ]
[ "$($BIN/eki 京急蒲田 | wc -l)" = "2" ]
[ "$($BIN/eki-pref 14 | grep 京急 | wc -l)" = "4" ]
[ "$($BIN/eki-pref 神奈川県 | grep 京急 | wc -l)" = "4" ]
