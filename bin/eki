#!/bin/bash -e

[ "$1" = "-h" ] && {
	cat >&2 <<- EOF
	eki 0.1
	Copyright (C) 2021, Ryuichi Ueda.

	Usage: eki [option]

	MIT License
	Released under MIT license
	https://github.com/ryuichiueda/eki
	EOF
	exit 0
}

DATA=/usr/share/eki/
[ -e "$DATA" ] || DATA="/eki/"
[ -e "$DATA" ] || DATA="$(dirname $0)/../eki/"

cat "$DATA/l/"*.xml   |
awk -F '[<>]' '/line_name/{line=$3}/station_name/{print line,$3}'
