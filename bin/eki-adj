#!/bin/bash -e

[ "$1" = "-h" ] && {
	cat >&2 <<- EOF
	eki-adj 0.1.1
	Copyright (C) 2021, Ryuichi Ueda.

	Usage: eki-adj [option]

	MIT License
	Released under MIT license
	https://github.com/ryuichiueda/eki
	EOF
	exit 0
}

DATA=/usr/share/eki/
[ -e "$DATA" ] || DATA="/eki/"
[ -e "$DATA" ] || DATA="$(dirname $0)/../eki/"

BIN=$(dirname $0)

#$BIN/eki                  |
#awk -v s="$1" '$2==s'

grep -C1 ">$1<" "$DATA/n/"*.xml                                    |
awk -F '[<>]' -v s="$1" '$2~/station_name[12]/ && $3!=s{print $3}' |
sort -u
