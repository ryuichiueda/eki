#!/bin/bash -e

[ "$1" = "-h" ] && {
	cat >&2 <<- EOF
	eki-line 0.1
	Copyright (C) 2021, Ryuichi Ueda.

	Usage: eki-line [option]

	MIT License
	Released under MIT license
	https://github.com/ryuichiueda/eki
	EOF
	exit 0
}

RAWDATA=/usr/share/eki/raw
[ -e "$RAWDATA" ] || RAWDATA="/eki/raw"
[ -e "$RAWDATA" ] || RAWDATA="$(dirname $0)/../eki/raw"

awk -F '[<>]' -v s="$1" '$2=="line_name"{line=$3}$2=="station_name" && $3==s{print line}' "$RAWDATA/s/"*.xml 
